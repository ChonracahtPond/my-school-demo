datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model RegSchool {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  irImg         String?
  irDescription String?
}

model Regfrom {
  id              String  @id @default(auto()) @map("_id") @db.ObjectId
  educationOffice String?
  fname           String?
  lname           String?
  birthday        String?
  age             String?
  idcard          String?
  religion        String?
  nationality     String?
  occupation      String?
  avgincome       String?
  fathersname     String?
  fanationality   String?
  faavgincome     String?
  mothersname     String?
  monationality   String?
  moavgincome     String?

  endclass    String?
  endyear     String?
  schoolend   String?
  enddistrict String?
  endprovince String?

  dhamma            String?
  endyeardhamma     String?
  endschooldhamma   String?
  enddistrictdhamma String?
  endprovincedhamma String?

  address     String?
  group       String?
  alley       String?
  road        String?
  subdistrict String?
  district    String?
  province    String?
  zipcode     String?
  tel         String?

  imgprifile           String?
  imgqualification     String?
  imghouseregistration String?
  imgidcard            String?
}

model RegisterForm {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  //ข้อมูลผู้สมัคร
  regId         String? //รหัสนักศึกษา
  regIdpersonal String? //รหัหสบัตรประชาชน
  regBirth      String? //วันเกิด
  regPrefix     String? // คำนำหน้า
  regSex        String? // เพศ
  regNation     String? // ประเทศ
  regName       String? //ชื่อ
  regLastname   String? //นามสกุล
  regEname      String? //ชื่ออิง
  regElastname  String? // นามสกุลอิง
  regPhone      String? //เบอร์
  regEmail      String? //เมล
  regImg        String? //รูป

  //ประวัติการศึกษา
  regSchool String?
  regDegree String?
  regGpa    String?

  //ข้างล่างเป็นเกี่ยวกับคณะและหลักสูตร
  regProgram String? //หลักสูตร
  regFaculty String?
  regMajor   String?
}
